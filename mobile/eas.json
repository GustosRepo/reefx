{
  "cli": {
    "appVersionSource": "local"
  },

  "build": {
    "preview": {
      "distribution": "internal",
      "developmentClient": false,
      "android": { "buildType": "apk" },
      "ios":    { "simulator": true }
    },
    "production": {
      "distribution": "store",
      "android": {
        "buildType": "app-bundle",
        "autoIncrement": true
      },
      "ios":    { "autoIncrement": "buildNumber" }
    }
  }


}